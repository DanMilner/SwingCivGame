<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane alignment="center" hgap="10" minHeight="-Infinity" minWidth="-Infinity" vgap="10"
          xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.menu.Controller">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <Pane fx:id="menuPane" prefHeight="700.0" prefWidth="1100.0"
              style="-fx-background-image: url('backgrounds/menuBackground.jpg'); -fx-background-repeat: stretch; -fx-background-size: cover;">
            <children>
                <Pane layoutX="600.0" layoutY="30.0" prefHeight="650.0" prefWidth="475.0"
                      style="-fx-background-image: url('backgrounds/menuMapSettingsBackground.jpg'); -fx-background-size: cover; -fx-border-color: black;">
                    <children>
                        <Slider fx:id="treeSlider" layoutX="217.0" layoutY="56.0" max="500.0" value="100.0"/>
                        <Label layoutX="43.0" layoutY="47.0" prefHeight="17.0" prefWidth="74.0" text="Trees">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <Label layoutX="43.0" layoutY="103.0" prefHeight="35.0" prefWidth="125.0" text="Mountains">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <Slider fx:id="mountainSlider" layoutX="217.0" layoutY="112.0" max="500.0" value="100.0"/>
                        <Label layoutX="43.0" layoutY="164.0" prefHeight="17.0" prefWidth="74.0" text="Water">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <Slider fx:id="waterSlider" layoutX="217.0" layoutY="173.0" max="300.0" value="100.0"/>
                        <Label layoutX="43.0" layoutY="221.0" prefHeight="35.0" prefWidth="140.0" text="Resources">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <Slider fx:id="resourcesSlider" layoutX="217.0" layoutY="230.0" max="500.0" value="100.0"/>
                        <Label layoutX="43.0" layoutY="282.0" prefHeight="35.0" prefWidth="133.0" text="Mapsize">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <Slider fx:id="mapsizeSlider" layoutX="217.0" layoutY="291.0" min="40.0" value="40.0"/>
                        <TextField fx:id="treeValue" layoutX="387.0" layoutY="52.0" prefHeight="25.0" prefWidth="40.0"
                                   text="100"/>
                        <TextField fx:id="mountainValue" layoutX="387.0" layoutY="107.0" prefHeight="25.0"
                                   prefWidth="40.0" text="100"/>
                        <TextField fx:id="waterValue" layoutX="387.0" layoutY="168.0" prefHeight="25.0" prefWidth="40.0"
                                   text="100"/>
                        <TextField fx:id="resourcesValue" layoutX="387.0" layoutY="225.0" prefHeight="25.0"
                                   prefWidth="40.0" text="100"/>
                        <TextField fx:id="mapsizeValue" layoutX="387.0" layoutY="286.0" prefHeight="25.0"
                                   prefWidth="40.0" text="40"/>
                    </children>
                </Pane>
                <Label layoutX="50.0" layoutY="60.0" text="Name">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
                <Button fx:id="startGame" layoutX="165.0" layoutY="608.0" mnemonicParsing="false" onAction="#startGame"
                        prefHeight="72.0" prefWidth="209.0" text="Start Game"/>
                <Button fx:id="addPlayerButton" layoutX="50.0" layoutY="100.0" mnemonicParsing="false"
                        onAction="#addPlayer" text="+"/>
                <Label layoutX="250.0" layoutY="60.0" text="Colour">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
            </children>
        </Pane>
    </children>
</GridPane>
